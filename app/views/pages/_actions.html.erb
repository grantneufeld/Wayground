<%
user ||= current_user
skip_view ||= false

if !skip_view && (!(page.is_authority_restricted?) || (user && page.has_authority_for_user_to?(user, :can_view)))
  %><%= link_to 'View', page.sitepath, :title => 'Go to the page', :class => 'action' %>
<% end

if user
  if page.has_authority_for_user_to?(user, :can_edit)
    %><%= link_to 'Edit', edit_page_path(page), :title => 'Make changes to the page', :class => 'action' %>
<% end
  if page.has_authority_for_user_to?(user, :can_create)
    %><%= link_to 'Add Subpage', new_page_path(:parent => page.id),
      :title => 'Add a page under this page', :class => 'action'
    %>
<% end
  if page.has_authority_for_user_to?(user, :can_delete)
    %><%= link_to 'Delete', page,
      :confirm => "Are you sure you want to permanently delete the page “#{page.title}”?",
      :method => :delete, :href => delete_page_path(page),
      :title => 'Permanently remove the page from the website', :class => 'action'
    %>
<% end
end -%>
