<h1>Edit version history for “<%= link_to @item.title, @item %>”</h1>
<%= show_pagination_header('versions') %>
<%= show_pagination_selector %>
<table>
<thead><tr>
<th>Editor</th>
<th>Edited at</th>
<th>Edit Comment</th>
</tr></thead>
<tbody>
<% @versions.each do |version|
  user = version.user
  %><tr>
<td><%= link_to user.name, profile_path(user) %></td>
<td><%
if @item.is_a? Page
  %><%= link_to version.edited_at, page_version_path(@item, version) %><%
elsif @item.is_a? Event
  %><%= link_to version.edited_at, event_version_path(@item, version) %><%
end
%></td>
<td><%= version.edit_comment %></td>
</tr>
<% end %></tbody>
</table>
