<% # encoding: utf-8

%><h2>Sources</h2>
<table>
<thead><tr><th>Source</th> <th>Last Updated</th> <th>Actions</th></tr></thead>
<tbody>
<%
@sources.each do |source|
  %><tr><td><%= source.processor %>: <b><%= source.title %></b><br /><%= source.url %></td> <td><%
  if source.last_updated_at?
    %><span title="<%= source.last_updated_at.to_s(:plain_datetime) %>"><%= source.last_updated_at.to_s(:compact_date) %></span><%
  end
  %></td>
<td><%= link_to 'Details', source, :class => 'action' %><span class="separator">,</span><%
  if source.has_authority_for_user_to?(@user, :can_update) %>
<%= link_to 'Process', processor_source_path(source), :class => 'action' %><span class="separator">,</span>
<%= link_to 'Edit', edit_source_path(source), :class => 'action' %><span class="separator">,</span><%
  end
  if source.has_authority_for_user_to?(@user, :can_delete) %>
<%= link_to 'Delete', delete_source_path(source), :confirm => 'Are you sure?', :method => :delete, :class => 'action' %><%
    end %></td></tr>
<% end -%>
</tbody></table>

<p class="actions"><%= link_to 'New Source', new_source_path, :class => 'action' %></p>
