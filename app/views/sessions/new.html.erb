<div class="columns cols2">
<div class="column col1">

<ul id="remote-signin"><%= render partial: 'sessions/authentication_links' %></ul>
<%= render partial: 'users/remote_signin_explanation' %>

</div>
<div class="column col2 lastcol">

<p>If you previously registered with an email address and password, you can sign in here:</p>
<%= form_tag signin_path do %>
<table><tbody>
<tr><th><%= label_tag :email %></th><td><%= email_field_tag :email, params[:email] %></td></tr>
<tr><th><%= label_tag :password %></th><td><%= password_field_tag :password %></td></tr>
<tr><th></th><td><%= check_box_tag :remember_me, 1, params[:remember_me] %><%= label_tag :remember_me %></td></tr>
</tbody>
<tfoot><tr><th></th><td><%= submit_tag "Sign In" %></td></tr></tfoot>
</table>
<% end %>

</div>
<div class="closeblock"></div>
</div>
